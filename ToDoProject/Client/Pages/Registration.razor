@page "/registration"
<h3>Registration</h3>

@if (ShowRegistrationErrors)
{
        <div class="alert alert-danger" role="alert">
            <p>@Error</p>
        </div>
}
<EditForm Model="_request" OnSubmit="Register" class="card card-body bg-light mt-5">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label for="email" class="col-md-2 col-form-label">Nome:</label>
        <div class="col-md-10">
            <InputText id="email" class="form-control" @bind-Value="_request.Name" />
            <ValidationMessage For="@(() => _request.Name)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-md-2 col-form-label">Cognome:</label>
        <div class="col-md-10">
            <InputText id="email" class="form-control" @bind-Value="_request.Surname" />
            @*<ValidationMessage For="@(() => _request.Name)" />*@
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-md-2 col-form-label">Email:</label>
        <div class="col-md-10">
            <InputText id="email" class="form-control" @bind-Value="_request.Email" />
            <ValidationMessage For="@(() => _request.Email)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="password" class="col-md-2 col-form-label">Password:</label>
        <div class="col-md-10">
            <InputText type="password" id="password" class="form-control" @bind-Value="_request.Password" />
            <ValidationMessage For="@(() => _request.Password)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="confirm" class="col-md-2 col-form-label">Reinserisci la password:</label>
        <div class="col-md-10">
            <InputText type="password" id="confirm" class="form-control" @bind-Value="_request.ConfirmPassword" />
            <ValidationMessage For="@(() => _request.ConfirmPassword)" />
        </div>
    </div>
    @*Creare nuovo componente per le date*@
    <div class="form-group row">
        <label for="confirm" class="col-md-2 col-form-label">Data di nascita:</label>
        <div class="col-md-10">
            <InputDate id="confirm" class="form-control" @bind-Value="_request.BirthDate" />
            @*<ValidationMessage For="@(() => _request.ConfirmPassword)" />*@
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">Register</button>
        </div>
    </div>
</EditForm>